@page "{id}"
@model Learning.Mvc.Pages.Admin.Discounts.EditDiscountModel
@{
    ViewData["Title"] = "ویرایش تخفیف ";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">

        <form method="post" enctype="multipart/form-data" style="overflow-y:auto" class="card flex-div border-0 main-shadow">
            <input type="hidden" asp-for="EditDiscountDTO.DiscountId" />
            <div class="modal-body row">
                <div class="col-md-12 col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            اطلاعات کد تخفیف
                        </div>
                        <div class="panel-body">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>کد تخفیف </label>
                                    <input type="text" asp-for="EditDiscountDTO.DiscountCode" class="form-control">
                                    <span asp-validation-for="EditDiscountDTO.DiscountCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>درصد کد تخفیف </label>
                                    <input type="number" asp-for="EditDiscountDTO.DiscountPercent" class="form-control" min="1" max="99">
                                    <span asp-validation-for="EditDiscountDTO.DiscountPercent" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>تعداد </label>
                                    <input type="number" asp-for="EditDiscountDTO.UsableCount" class="form-control">
                                    <span asp-validation-for="EditDiscountDTO.UsableCount" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>تاریخ شروع </label>
                                    <input asp-for="EditDiscountDTO.StartDate"  />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>تاریخ پایان </label>
                                    <input asp-for="EditDiscountDTO.EndDate"  />
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer justify-content-end">
                            <button type="submit" class="btn btn-success btn-sm text-white">ویرایش<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></button>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
<script src="/AdminContent/js/jquery-1.10.2.js"></script>
<link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
<link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

<script src="/js/kendo.all.min.js"></script>
<script>
    // create DatePicker from input HTML element
    $("#EditDiscountDTO_StartDate").kendoDatePicker();
    $("#EditDiscountDTO_EndDate").kendoDatePicker();
</script>



}
