@page "{handler?}"
@model Learning.Mvc.Pages.Admin.Discounts.IndexModel
@{
    ViewData["Title"] = "لیست تخفیف ها";
}

<div class="row flex-div">
    <div class="col-md-12 flex-div pb-3 pt-3">
        <div class="card flex-div border-0 main-shadow">
            <div class="card-header bg-white">
                <div class="pr-1 pt-2">
                    <div class="form-group pb-0 mb-0 mr-1 mr-md-3">
                        <a asp-page="CreateDiscount" class="btn btn-success btn-sm LoadingDiv"> افزودن<span class="icon-holder uk-margin-small-right" uk-icon="add-circle-outline"></span></a>
                    </div>
                </div>
            </div>

            <div id="card-table" class="card-body flex-div">
                <div class="table-responsive flex">
                    <table class="table fixed">
                        <thead class="thead-light">
                            <tr>
                                <th>کد</th>
                                <th>تعداد</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var discount in Model.FilterDiscountDTO.Discounts)
                            {
                                <tr class="item_@discount.DiscountId">

                                    <td>@discount.DiscountCode</td>
                                    <td>@discount.UsableCount</td>
                                    <td>@((discount.StartDate!=null)?discount.StartDate.Value.ToShamsi():"")</td>
                                    <td>@((discount.EndDate!=null)?discount.EndDate.Value.ToShamsi():"")</td>
                                    <td>
                                        <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                            <a href="/Admin/Discounts/EditDiscount/@discount.DiscountId" class="text-primary LoadingDiv" uk-icon="create-outline"></a>
                                        </span>
                                        <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                            <a ajax-url-button="@discount.DiscountId"
                                           href="/Admin/Discounts/Index/DeleteDiscounts?code=@discount.DiscountId"
                                           class="text-danger" uk-icon="trash"></a>
                                        </span>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
