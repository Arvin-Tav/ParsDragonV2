@model Learning.Domain.Models.Contact.Contact
@{
    ViewData["Title"] = "تماس با ما ";
}
<!-- CSS Styles -->
<link rel="icon" href="favicon.ico">
<link rel="stylesheet" type="text/css" href="~/site/contactUs/css/bootstrap-rtl.css">
<link rel="stylesheet" type="text/css" href="~/site/contactUs/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/site/contactUs/css/icon-font.min.css">
<link rel="stylesheet" type="text/css" href="~/site/contactUs/css/style.css">
<!-- CSS Styles / -->
<!--====================form======================-->
<div class="container-contact100">
    <div class="wrap-contact100">
        <form class="contact100-form validate-form" action="/Contact" method="post">
            @if (ViewBag.IsSend == true)
            {

                <div class="alert alert-success">
                    <p>
                        پیام شما ارسال شد و  بعد از بررسی در اسرع وقت با شما تماس خواهیم گرفت
                    </p>
                </div>
            }
            <span class="contact100-form-title">
                تماس با ما
            </span>
            <label class="label-input100" for="first-name">  اطلاعات خود را در این قسمت وارد کنید *</label>
            <div class="wrap-input100 validate-input" data-validate="اطلاعات خود را در این قسمت وارد کنید ">
                <input class="input100" asp-for="Name" placeholder="نام و نام خانوادگی">
                <span class="focus-input100 text-danger" asp-validation-for="Name"></span>
            </div>
            <label class="label-input100" for="email">  ایمیل خود را در این قسمت وارد کنید *</label>
            <div class="wrap-input100 validate-input" data-validate="لطفا ایمیل معتبر وارد کنید ">
                <input class="input100" asp-for="Email" placeholder="eg.example@email.com">
                <span class="focus-input100 text-danger" asp-validation-for="Email"></span>
            </div>
            <label class="label-input100" for="phone">  شماره تماس خود را در این قسمت وارد کنید</label>
            <div class="wrap-input100">
                <input class="input100" placeholder="09123456789" asp-for="TellNo">
                <span class="focus-input100 text-danger" asp-validation-for="TellNo"></span>
            </div>
            <label class="label-input100" for="message">متن پیام *</label>
            <div class="wrap-input100 validate-input" data-validate="وارد کردن پیام الزامی است">
                <textarea asp-for="Message" class="input100" name="message" placeholder="پیام خود را در این قسمت وارد کنید"></textarea>
                <span asp-validation-for="Message" class="focus-input100 text-danger"></span>
            </div>
            <div class="container-contact100-form-btn">
                <button class="contact100-form-btn" name="submit">
                    ارسال پیام
                </button>
            </div>
        </form>
        <div class="contact100-more flex-col-c-m" style="background-image: url('@ViewData["AksTamasBama"].ToString().GetConfigImageAddress()'); ">
            <div class="flex-w size1 p-b-47">
                <div class="txt1 p-r-25">
                    <span class="lnr lnr-map-marker"></span>
                </div>
                <div class="flex-col size2">
                    <span class="txt1 p-b-20 p-r-25">
                        آدرس
                    </span>
                    <span class="txt3 p-r-25">
                        @ViewData["Address"]
                    </span>
                </div>
            </div>
            <div class="dis-flex size1 p-b-47">
                <div class="txt1 p-r-25">
                    <span class="lnr lnr-phone-handset"></span>
                </div>
                <div class="flex-col size2">
                    <span class="txt1 p-b-20  p-r-25">
                        شماره تماس
                    </span>
                    <span class="txt3 p-r-25">
                        @ViewData["TellHome"]
                    </span>
                </div>
            </div>
            <div class="dis-flex size1 p-b-47">
                <div class="txt1 p-r-25">
                    <span class="lnr lnr-envelope"></span>
                </div>
                <div class="flex-col size2">
                    <span class="txt1 p-b-20 p-r-25">
                        ایمیل
                    </span>
                    <span class="txt3 p-r-25">
                        @ViewData["Email"]
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
