@using Learning.Domain.DTO.Paging
@model BasePaging


<div class="pagination-layer">

    @if (Model.StartPage < Model.PageId)
    {
        <a href="javascript:void(0)" onclick="FillPageId(@(Model.PageId - 1))" class="prev-page"><i class="zmdi zmdi-chevron-right"></i> </a>
    }

    @for (int i = Model.StartPage; i <= Model.EndPage; i++)
    {
        <a href="javascript:void(0)" onclick="FillPageId(@i)" class="page @(Model.PageId == i ? "active":"")">@i</a>

    }

    @if (Model.EndPage > Model.PageId)
    {
        <a href="javascript:void(0)" onclick="FillPageId(@(Model.PageId + 1))" class="next-page"><i class="zmdi zmdi-chevron-left"></i> </a>

    }



</div>