@using Learning.Application.EntitiesExtensions
@using Learning.Application.Extentions
@using Learning.Domain.Models.Account
@{
    User user = ViewBag.User as User;
}

<header class="main-header">
    <!-- use this H1 for home page -->
    <h1 class="title-homepage">MoneyMagnet</h1>
    <!-- /use this H1 for home page -->
    <a href="/" class="logo animated fadeInDown"><img src="/images/logo.png" style="width:100px;"></a>
    <nav>
        <span class="responsive-menu"><i class="zmdi zmdi-menu"></i></span>
        <ul>
            <li><a  asp-controller="Course" asp-action="Index"> آخرین دوره ها </a></li>
            <li><a href="/Masters"> معرفی مدرسین </a></li>

            <li><a href="/Blogs"> مقاله </a></li>
            <li><a href="/Consulting"> مشاوره </a></li>
            <li><a href="/WorkWithMoneyMagnet">همکاری با ما </a></li>
            <li><a href="/Terms">قوانین  سایت </a></li>
            <li><a href="/Help">راهنمای خرید از سایت</a></li>
            <li><a href="/Contact"> تماس با ما </a></li>
            <li><a href="/About"> درباره ما </a></li>
        </ul>
    </nav>
    <div class="clientarea">
        <div class="user-area">



            @if (User.Identity.IsAuthenticated)
            {

                <div class="logged-in">
                    <a href="javascript:void(0)" class="img-layer"><img src="@user.GetUserImageAddress()" /></a>
                    <a href="javascript:void(0)" class="title"> @user.GetUserName() <i class="zmdi zmdi-caret-down"></i> </a>
                    <div class="sublayer">
                        <ul>
                            @if (ViewBag.IsAdmin != null && ViewBag.IsAdmin == true)
                            {
                                <li><a href="/Admin"> پنل مدیریت </a></li>
                            }
                            <li><a href="/UserPanel"> مشاهده حساب کاربری </a></li>
                            <li><a href="/UserPanel/EditProfile"> ویرایش حساب کاربری </a></li>
                            <li><a href="/UserPanel/ChangePassword"> تغییر رمز عبور </a></li>
                            <li><a href="/UserPanel/Wallet"> کیف پول من </a></li>
                            <li><a href="/UserPanel/MyOrders"> فاکتورهای من </a></li>
                            <li><a href="/UserPanel/MyCourses"> دوره های من </a></li>
                            <li><a href="/UserPanel/OnlineClass"> کلاس های من </a></li>
                            @*<li><a href="/Account/Tickets"> تیکت ها </a></li>*@
                            <li><a href="/logOut"> خروج از حساب کاربری </a></li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="logged-out">
                    <i class="zmdi zmdi-account-o"></i>
                    <a href="/Login"> ورود </a>
                    <a href="/Register"> ثبت نام </a>
                </div>
            }

        </div>
        <a href="javascript:void(0)"><i class="zmdi zmdi-search"></i></a>
    </div>
    @*   <a href="/Academy/Archive" class="cooperation animated flash delay-3s">
    <i class="zmdi zmdi-graduation-cap online-course-style"></i>
    آکادمی MoneyMagnet
    </a>*@
</header>