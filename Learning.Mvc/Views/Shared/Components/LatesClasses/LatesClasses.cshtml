@using Learning.Domain.DTO.OnlineClass
@model FilterOnlineClassDTO




<style>

    .img-classes a {
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: rgba(0,0,0,.7);
        right: 0;
        top: 0;
        z-index: 2;
        display: block;
        padding: 35px;
        opacity: 0
    }


        .img-classes a:before {
            width: 35%;
            height: 40%;
            border-left: 1px solid #fff;
            border-top: 1px solid #fff;
            top: 20px;
            left: 20px;
            content: '';
            position: absolute
        }

        .img-classes a:after {
            width: 35%;
            height: 40%;
            border-right: 1px solid #fff;
            border-bottom: 1px solid #fff;
            bottom: 20px;
            right: 20px;
            content: '';
            position: absolute
        }
</style>


@if (Model.OnlineClasses != null && Model.OnlineClasses.Any())
{
    <div class="last-articles-layer articles-view">
        <span class="right-parallax" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="800"></span>
        <section class="container">
            <header class="heading">
                <h2> آخرین کلاس های MoneyMagnet</h2>
                <a class="view-more" asp-controller="OnlineClass" asp-action="Index"> مشاهده همه کلاس ها <i class="zmdi zmdi-arrow-left"></i></a>
            </header>

            <div class="row">
                <!-- col -->
                @foreach (var item in Model.OnlineClasses)
                {
                    <partial name="_BoxClassOnline" model="@item" />
                }

                <!-- /col -->
            </div>
        </section>
        <span class="left-parallax" data-aos="fade-right" data-aos-duration="1000" data-aos-delay="300"></span>
    </div>
}


